    const char m1[]  = "Массив символов pgm в программной памяти, Flash вместо RAM";
    const char m2[]  = "Ну очень длинная строка на русском языке!";
    Serial.println(m1);
    Serial.println(m2);
  #endif

  #ifdef macrochars
    // Скетч использует 1760 байт (5%) памяти устройства. Всего доступно 32256 байт.
    // Глобальные переменные используют 360 байт (17%) динамической памяти, оставляя 1688 байт для локальных переменных. Максимум: 2048 байт.
  
    // Определяем макрос для размещения массива символов:
    #define _CS(name,value) const char name[] = value;
    _CS(m1, "Массив символов pgm в программной памяти, Flash вместо RAM") 
    _CS(m2, "Ну очень длинная строка на русском языке!") 
    Serial.println(m1);
    Serial.println(m2);
  #endif
}

