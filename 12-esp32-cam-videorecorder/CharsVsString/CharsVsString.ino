    const String m2 = "Ну очень длинная строка на русском языке!";
    Serial.println(m1);
    Serial.println(m2);
  #endif

  #ifdef chars
    // Скетч использует 1760 байт (5%) памяти устройства. Всего доступно 32256 байт.
